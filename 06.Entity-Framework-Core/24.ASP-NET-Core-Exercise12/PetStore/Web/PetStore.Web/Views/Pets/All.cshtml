@model AllPetsViewModel

<h1>All Pets</h1>

<div>
    <a href="/Pets/All?page=@Model.PreviousPage" class="float-left btn btn-info @(Model.PreviuosDisabled ? "disabled" : string.Empty)">Prev</a>

    @if (!Model.NextDisabled)
    {
        <a href="/Pets/All?page=@Model.NextPage" class="float-right btn btn-info">Next</a>
    }

</div>

<br />
<br />
<br />
<br />

<table class="table table-bordered table-striped">
    <tr>
        <th>
            Type
        </th>
        <th>
            Breed
        </th>
        <th>
            Price
        </th>
        <th>

        </th>
    </tr>
    @foreach (var pet in Model.Pets)
    {
<tr>
    <td>
        (@pet.Id) @pet.Category
    </td>
    <td>
        @pet.Breed
    </td>
    <td>
        $@pet.Price
    </td>
    <td class="text-center">
        <a href="/Pets/Delete/@pet.Id" class="btn btn-danger btn-sm">Delete</a>
    </td>
</tr>

    }
</table>



