<div class="user-info">
    <div>
        <p>Email: <span>{{email}}</span></p> |
        <p>My offers: <span>[{{offersBought.length}}]</span></p> |
        <p><a href="/user/logout">Logout</a></p>
    </div>
    <div class="shoes">
        {{#each offersBought}}
        <div class="shoe">
            <img
                src="{{ imageUrl }}">
            <h3>{{ name }}<span>${{ price }}</span></h3>
        </div>
        {{/each}}
    </div>
    <p class="total-profit">Total profit: <span>${{total}}</span></p>
</div>